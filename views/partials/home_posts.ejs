<% function nl2br(str){
    if(str)
    return str.replace(/(?:\r\n|\r|\n)/g, ' <br> ');
    else
    return
   }
%> 
<% posts.forEach(function (item) { %>
    
    <div class="row mt-5">
        <div class="col-md-5 m-auto">
            <!-- <div class="d-flex flex-row bg- text-white">
                <div class="col">
                    
                </div>
            </div> -->
                <div class="d-flex flex-row bg-dark text-white">
                    <div class="col">
                        <% var path='/community/'+item.community_id %> 
                        <a class="text-white" href=""><%=item.author%></a> &nbsp; <i class="fa fa-caret-right"></i> &nbsp; <a class="text-white" href=<%=path%> ><%=item.community_id%></a>
                    </div>
                    <div class="float-right">
                    <%date= new Date(item.date) 
                    var dd = String(date.getDate()).padStart(2, '0');
                    var mm = String(date.getMonth() + 1).padStart(2, '0'); //January is 0!
                    var yyyy = date.getFullYear();
                    var today = dd + '/' + mm + '/' + yyyy;%>
                    <%=today+','%>
                    <%=date.getHours() + ":" + date.getMinutes() + ":" + date.getSeconds()  %>&ensp;&ensp;
                    </div>
                </div>
                <div class="card card-body">
                    
                    
                    <% if(item.files) {%>
                    <% var path=item.files[0]; %> 
                    <% var type=item.type[0]; %> 
                    <%= console.log("This is the path "+path)  %> 
                    <%= console.log("This is the type "+type)  %> 
                    <div class="row w-75 mx-auto">
                        
                        <% if(item.type[0]==='video/mp4') { %>  
                            <div class="embed-responsive embed-responsive-16by9">
                            <video class="embed-responsive-item" width="320" height="400" controls>
                                <source src=<%= path %> type="video/mp4">
                                Your browser does not support the video tag.
                              </video>
                            </div>
                              
                        <% } %> 
                        <% if(item.type[0]==='image/jpeg'||item.type[0]==='image/png') %>
                        <% { %>  
                        <img src= <%= path %>  class="img-fluid rounded ">
                        <% } %>
                    </div>
                    <br>
                    <% } %> 
                    <% var newstory=nl2br(item.story); %> 

                    <%- newstory %>
                </div>
               

                <% var url='/community/'+item.community_id+'/post/'+item.postid %> 
                
                
                
                <div class="d-flex flex-row bg-dark text-white">
                    <div class="col"><h5>
                        
                        
                        <a class="mx-2 text-white" href=<%= url %> ><i class="fa fa-thumbs-up"></i></a>
                      
                    
                                 <a class="mx-5"></a>
                                 <a class="mx-2"></a>
                                
                        <a class="ml-5 text-white" href=<%= url %> >View Post</a>       
                       <div class="float-right">
                       
                        <a class="text-white"  href=<%= url %> ><i class="fa fa-comment"></i>
                     
                            </a>
                            </div>
                    </h5>
                    </div>
                </div>



            
        </div>
    </div>
<% });  %> 